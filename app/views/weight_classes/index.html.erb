<p id="notice"><%= notice %></p>

<h1>Listing Weight Classes</h1>

<table>
  <thead>
    <tr>
      <th>Weight class</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weight_classes.each do |weight_class| %>
      <tr>
        <td><%= weight_class.weight_class_id %></td>
        <td><%= weight_class.value %></td>
        <td><%= link_to 'Show', weight_class %></td>
        <td><%= link_to 'Edit', edit_weight_class_path(weight_class) %></td>
        <td><%= link_to 'Destroy', weight_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

