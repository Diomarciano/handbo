<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Subitem</th>
      <th>Image</th>
      <th>From</th>
      <th>Until</th>
      <th>Price</th>
      <th>Description</th>
      <th>Stadt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.item %></td>
        <td><%= product.subitem %></td>
        <td><%= product.image %></td>
        <td><%= product.from %></td>
        <td><%= product.until %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.stadt %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

