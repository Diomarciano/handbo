<body>
<nav class="navbar navbar-default">
	<div class="container-fluid">
		<!-- Brand and toggle get grouped for better mobile display -->
		<ul class="nav navbar-nav navbar-left">
			<%= link_to '',root_path,class:"glyphicon glyphicon-home btn-lg" %>
		</ul>
	</div>
</nav>

<%= form_tag sessions_path do %>
<div class="container atas">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-md-3 col-md-offset-3">
								<h4 class="text-center">Login</h4>
							</div>
						</div>
						<hr>
					</div>

					 <div class="form-group">
						<div class="row">
							<div class="col-md-6 col-md-offset-3">
								<%= label_tag :email %><br />
   								<%= text_field_tag :email, params[:email],type:"text",id:"email" %>
							</div>
						</div>
					</div>

					<div class="form-group">
						<div class="row">
							<div class="col-md-6 col-md-offset-3">
								<%= label_tag :password %><br />
    							<%= password_field_tag :password %>
							</div>
						</div>
					</div>
					<div class="form-group text-center">
						<input type="checkbox" tabindex="3" class="" name="remember" id="remember">
						<label for="remember"> Remember Me</label>
					</div>
					<div class="form-group">
						<div class="row">
							<div class="col-sm-6 col-sm-offset-3">
								<%= submit_tag "Log in",id:"login-submit",class:"form-control btn btn-login" %></p>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="row">
							<div class="col-sm-6 col-sm-offset-3">
								<div class="text-center">
									<%= link_to "Register",register_path,id:"register-tab",class:"forgot-password" %>
								</div>
							</div>
						</div>		
				</div>
			</div>
		</div>
	</div>
	<% end %>
<%= render 'layouts/footer' %>
</body>
</html>